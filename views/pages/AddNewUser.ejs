<% include ../partials/header %>
  <!-- การทำ update data -->
  <div class="col" style="text-align: center;">
    <h1>ADD NEW USER</h1>
  </div>
  <br>
  <br>
  <form action="/users/addnew_user" method="POST" onsubmit="addTimestamp()">
    <div class="form-group">
      <label for="">Email</label>
      <input type="text" class="form-control" name="UserEmail" id="UserEmail" aria-describedby="helpId" placeholder="">
      <small id="helpId" class="form-text text-muted">User Email</small>
    </div>
    <div class="form-group">
      <label for="">Password</label>
      <input type="password" class="form-control" name="password" id="password" aria-describedby="helpId" min="0" placeholder="">
      <small id="helpId" class="form-text text-muted">Password</small>
    </div>
    <div class="form-group">
      <label for="" id="datelabel">Date</label>
      <input class="form-control" name="datetime" id="datetime">
      <small id="helpId" class="form-text text-muted"></small>
    </div>
    <button type="submit" class="btn btn-primary">Add New</button>
    &nbsp;&nbsp;
    <a href="/users">Cancel</a>
  </form>
  <script>
    $(document).ready(function(){
      $("#datetime").hide()
      $("#datelabel").hide()
    })
    function addTimestamp() {
      var date = new Date()
      var isoTime = date.toISOString()
      console.log(date.toISOString())
      document.getElementById("datetime").value = isoTime
    }
  </script>

